<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bold_12_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="bold_14_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="bold_16_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="bold_20_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="medium_18_edit" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="bold_20_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name ="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="textAllCaps">false</item>
    </style>



</resources>