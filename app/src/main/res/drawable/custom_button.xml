<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape>
      <corners android:bottomRightRadius="@dimen/_50sdp"
          android:topLeftRadius="@dimen/_50sdp"/>
      <solid android:color="@color/grey"/>
    </shape>
  </item>

  <item>
    <shape>
      <corners android:bottomLeftRadius="@dimen/_50sdp"
        android:topRightRadius="@dimen/_50sdp"/>
      <gradient
          android:startColor="@android:color/holo_red_dark"
          android:centerColor="@android:color/holo_red_light"
          android:endColor="@color/black"
          android:angle="135"/>

    </shape>
  </item>



</selector>